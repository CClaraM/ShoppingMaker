<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapplication.shopingmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopingMarket">
        <activity
            android:name=".activity_popup_shopping"
            android:theme="@style/Popup"/>
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Splash_1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.ShopingMarket"></activity>
        <activity
            android:name=".ItemActivity"
            android:theme="@style/Theme.ShopingMarket"></activity>
        <activity
            android:name=".ShoppingActivity"
            android:theme="@style/Theme.ShopingMarket"></activity>
    </application>

</manifest>