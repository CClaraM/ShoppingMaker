<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:cardCornerRadius="35dp"
    app:cardElevation="15dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recommended_image"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/rancking_bar_home"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="44dp"
                    android:layout_marginBottom="44dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/color_bg"
                    android:scaleX="1.5"
                    android:scaleY="1.9"
                    android:secondaryProgressTint="@color/bt_color_1"
                    android:stepSize="0.1"
                    app:layout_constraintBottom_toBottomOf="@+id/recommended_image"
                    app:layout_constraintEnd_toEndOf="@+id/recommended_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>